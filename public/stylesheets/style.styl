//imports

@import 'font.css'
@import nib
@import mixins






// start this shit

global-reset()

*, *:before, *:after
	box-sizing border-box

a
	color inherit
	text-decoration none

body
	background white
	font()
	font-size 100%

.wrapper
	padding 2%


nav.main
	fixed bottom
	width 100%
	background pink
	color white
	padding 1.5em 1em
	clearfix()
	h1
		font-size 90px
		float left
	.shuffle
		float right
		text-align center
		border-radius 160px
		i
			font-size 80px
			text-shadow 0 5px 0 pink, 0 8px 0 white

.splash
	absolute top bottom
	left 0
	right 0
	font-size 150px
	text-align center
	padding 400px 0
	background pink
	color white
	height 100%
	

.splash + nav
	display none

.mannequin	
	margin 20px auto 0
	height 600px
	.modelHead
		width 130px
		height 130px
		margin 0 auto
		text-align -999em
		.face
			width 100%
			height 100%
			display block
			margin 0 auto
			background pink
			border-radius 100px
	.row
		border none
		background white
		margin 20px auto
		height 240px

.buy
	absolute top bottom
	left 0
	right 0
	background white
	.item
		margin 5% 20%
		font-serif()
		font-size 140%
	.buybutton
		display block
		background pink
		color white
		padding 0 0 30px
		margin 0 0 40px
		text-align center
		font()
		font-size 60px
		text-transform uppercase
		i
			font-size 80px
			top 15px
			left 20px
	img
		max-width 100%
		height auto
	& + nav
		// background yellow
		// i.icon-bolt
		// 	text-shadow 0 5px 0 blue, 0 8px 0 white
	.back
		absolute top 40% left 40px
		font-size 100px
		color pink






		
		
