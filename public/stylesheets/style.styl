//imports

@import 'font.css'
@import nib
@import mixins






// start this shit

global-reset()

*, *:before, *:after
	box-sizing border-box

a
	color inherit
	text-decoration none

body
	background white
	font()
	font-size 100%

.wrapper
	padding 2%


nav.main
	fixed bottom
	width 100%
	background pink
	color white
	padding 1.5em 1em
	clearfix()
	h1
		font-size 90px
		float left
	.shuffle
		float right
		text-align center
		border-radius 160px
		i
			font-size 80px
			text-shadow 0 5px 0 pink, 0 8px 0 white

.splash
	font-size 150px
	text-align center
	margin 200px 0

.mannequin	
	margin 20px auto 0
	height 600px
	.modelHead
		width 130px
		height 130px
		margin 0 auto
		text-align -999em
		.face
			width 100%
			height 100%
			display block
			margin 0 auto
			background pink
			border-radius 100px
	.row
		border none
		background white
		margin 20px auto
		height 240px

.buy
	.item
		margin 5% 20%
		font-serif()
		font-size 140%
	.buybutton
		display block
		background pink
		color white
		padding 10px
		text-align center
		font()
		text-transform uppercase
		i
			font-size 100px
	img
		max-width 100%
		height auto
	









		
		
