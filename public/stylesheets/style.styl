//imports

@import 'font.css'
@import nib
@import mixins






// start this shit

global-reset()

*, *:before, *:after
	box-sizing border-box

a
	color inherit
	text-decoration none

body
	background white
	font()
	font-size 100%

.wrapper
	padding 2%


nav.main
	fixed bottom
	width 100%
	background pink
	color white
	padding 1em 0
	clearfix()
	h1
		font-size 100px
		float left
	.shuffle
		float right
		i
			font-size 100px

.splash
	font-size 150px
	text-align center
	margin 200px 0

.mannequin	
	margin 0 auto
	.modelHead
		width 100px
		height 100px
		margin 0 auto
		// background blue
		.face
			width 100%
			height 100%
			display block
			margin 0 auto
			background yellow
			border-radius 100px
	.row
		margin 0 auto


.buy
	.item
		margin 5% 20%
		font-serif()
		font-size 140%
	.buybutton
		display block
		background pink
		color white
		padding 10px
		text-align center
		font()
		text-transform uppercase
		i
			font-size 100px
	img
		max-width 100%
	









		
		
