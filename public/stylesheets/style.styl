@import 'font.css'
@import nib
@import mixins






// start this shit

global-reset()

*, *:before, *:after
	box-sizing border-box


body
	background white
	font()
	font-size 100%

.wrapper
	padding 2%


nav.main
	fixed bottom
	width 100%
	background pink
	color white
	padding 1em 0
	clearfix()
	h1
		font-size 100px
		float left
	.shuffle
		float right
		i
			font-size 100px




.mannequin
	width 90%
	margin 0 auto
	background red
	.modelHead
		width 20%
		margin 0 auto
		background blue
		.face
			width 50%
			display block
			margin 0 auto
			background white
			border-radius 100px
	.row
		width 3000px
		margin 0
		overflow scroll
		height 200px
		background pink
		white-space: pre
		.item
			float left
			width 100%
			background yellow
